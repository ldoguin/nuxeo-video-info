<?xml version="1.0"?>
<component name="org.nuxeo.video.info.theme">

  <require>org.nuxeo.theme.nuxeo.default</require>

  <extension target="org.nuxeo.theme.services.ThemeService" point="views">

    <view name="nuxeo5 includes" template-engine="jsf-facelets" merge="true">
           <format-type>widget</format-type>
           <resource>videojs.rangeslider.css</resource>
           <resource>videojs.rangeslider.js</resource>
    </view>

  </extension>

  <extension target="org.nuxeo.theme.services.ThemeService" point="resources">
    <resource name="videojs.rangeslider.css">
      <path>css/videojs.rangeslider.css</path>
    </resource>
    <resource name="videojs.rangeslider.js">
      <path>scripts/videojs.rangeslider.js</path>
      <require>video-js.js</require>
    </resource>
  </extension>

</component>
